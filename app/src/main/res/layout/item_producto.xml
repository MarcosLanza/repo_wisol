
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">
        <TextView
            android:id="@+id/txtProductoCodigo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:text="CODIGO"
            android:textSize="17dp"

            android:textColor="@android:color/black"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />


        <TextView
            android:id="@+id/txtNameProducto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:textSize="17dp"

            android:text="PRODUCTO"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/txtCNTProdcuto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:textStyle="bold"
            android:gravity="center"
            android:inputType="number"
            android:textSize="20dp"

            android:layout_weight="2"

            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <!-- Columna 2 (Estado) -->
        <TextView
            android:id="@+id/txtProductoBono"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="0"
            android:textSize="20dp"

            android:textColor="@android:color/black"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />


        <!-- Columna 2 (Estado) -->
        <TextView
            android:id="@+id/txtProductoPrecio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="PRECIO"
            android:textSize="20dp"

            android:textColor="@android:color/black"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <!-- Columna 2 (Estado) -->
        <TextView
            android:id="@+id/txtProductoDescuento"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="0"
            android:textSize="20dp"

            android:textColor="@android:color/black"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />
        <TextView
            android:id="@+id/txtProductoImpuestoto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="0"
            android:textSize="20dp"

            android:textColor="@android:color/black"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <!-- Columna 2 (Estado) -->
        <TextView
            android:id="@+id/txtProductoPrecioP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="0"
            android:textSize="20dp"

            android:textColor="@android:color/black"
            android:gravity="center"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <!-- Columna 2 (Estado) -->
        <TextView
            android:id="@+id/txtUC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="0"
            android:textSize="20dp"

            android:textColor="@android:color/black"
            android:gravity="center"/>




    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white" />
    <!-- Columna 1 (Cliente) -->




    <!-- Resto de tu contenido, si lo tienes -->
</androidx.constraintlayout.widget.ConstraintLayout>

