<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionProductoActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/nabvar"

            >

            <ImageView
                android:id="@+id/imclogo1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_wisol_logo" />

            <TextView
                android:id="@+id/slogan"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="8dp"
                android:text="No hay Articulos"
                android:textSize="25dp"
                style="@style/ButtonTitle"

                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etFilterCodigoProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Código/Producto">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputFilterCodigoProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etFilterComentarioProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comentario">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputComentarioProductoA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="10dp"
                android:padding="16dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/blue">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2.5"
                        android:textSize="18dp"
                        style="@style/Encabezado"

                        android:text="Código"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="Producto"
                        style="@style/Encabezado"

                        android:textColor="@color/white"
                        android:layout_weight="7"
                        android:textSize="18dp"
                        android:gravity="center"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        style="@style/Encabezado"

                        android:text="CNT"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        style="@style/Encabezado"

                        android:text="Bono"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        style="@style/Encabezado"

                        android:text="Precio"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />

                    <TextView
                        style="@style/Encabezado"
                        android:layout_width="0dp"

                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:gravity="center"

                        android:text="Desc"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        style="@style/Encabezado"

                        android:text="Imp"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        style="@style/Encabezado"

                        android:text="Total"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:textSize="15dp"
                        style="@style/Encabezado"

                        android:text="Vender"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </androidx.recyclerview.widget.RecyclerView>


                <!-- Define el encabezado aquí -->
            </TableLayout>


        </LinearLayout>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,2,4,6,8"
            android:layout_margin="16dp">

            <!-- Encabezado azul -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/blue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promedio Trim"
                    android:textSize="20dp"
                    style="@style/Encabezado"
                    android:gravity="center" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes Anterior"
                    android:textSize="20dp"

                    style="@style/Encabezado"
                    android:gravity="center" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes Actual"
                    android:textSize="20dp"

                    style="@style/Encabezado"
                    android:gravity="center" />


            </TableRow>

            <!-- Separador blanco -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/white" />

            <!-- Elementos grises -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/grey">

                <TextView
                    android:id="@+id/tvPromedioTrim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"

                    android:textColor="@color/black"
                    android:gravity="center" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvMesAnteriror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"

                    android:textColor="@color/black"
                    android:gravity="center" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvMesActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"

                    android:textColor="@color/black"
                    android:gravity="center" />



            </TableRow>
        </TableLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,2,4,6,8"
            android:layout_margin="16dp">

            <!-- Encabezado azul -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/blue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min"
                    android:textSize="20dp"
                    style="@style/Encabezado"
                    android:gravity="center" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad"
                    android:textSize="20dp"

                    style="@style/Encabezado"
                    android:gravity="center" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total IVA"
                    android:textSize="20dp"

                    style="@style/Encabezado"
                    android:gravity="center" />

            </TableRow>

            <!-- Separador blanco -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/white" />

            <!-- Elementos grises -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/grey">

                <TextView
                    android:id="@+id/tvMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"

                    android:textColor="@color/black"
                    android:gravity="center" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvCantidadBono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"

                    android:textColor="@color/black"
                    android:gravity="center" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"

                    android:textColor="@color/black"
                    android:gravity="center" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >

            <Button
                android:id="@+id/btnBackPro"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginVertical="16dp"
                android:text="Atrás"
                style="@style/ButtonTitle2"

                app:cornerRadius='10dp'

                app:iconTint="@android:color/white" />
            <Button
                android:id="@+id/btnSavePro"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginVertical="16dp"
                android:text="Siguiente"
                style="@style/ButtonTitle2"

                app:cornerRadius='10dp'

                app:iconTint="@android:color/white" />

        </LinearLayout>




    </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>